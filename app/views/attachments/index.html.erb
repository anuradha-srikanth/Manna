<p id="notice"><%= notice %></p>

<h1>Listing Attachments</h1>

<table class = "striped centered">
  <thead>
    <tr>
      <th>Download Link</th>
      <th colspan="3">&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @attachments.each do |attachment| %>
      <tr>
        <td><%= link_to "#{attachment.name}", attachment.doc_url %></td>
        <td><%= button_to 'Delete', attachment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_attachment_path %>
