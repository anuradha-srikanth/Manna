<% if logged_in? %>

  
  <% if current_user.role? :deacon %>
    <%= render "care_deacon" %>
  <% elsif (current_user.role? :head_deacon) || (current_user.role? :admin) %>
    <%= render "head_deacon" %>
  <% elsif current_user.role? :financial_deacon %>
    <%= render "financial_deacon" %>
  <% elsif current_user.role? :staff %>
    <%= render "staff" %>
  <% end %>


<% end %>




