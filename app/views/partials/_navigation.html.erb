    <% if logged_in? %>
      <%= current_user.proper_name %> | <%= current_user.role %><br>
      <%= link_to 'Logout', logout_path %>
    <% else %>
      <%= link_to 'Login', login_path %>
    <% end %>
  </div>
  <div class = "row">
    <div id = "title">
      <%= link_to(home_path) do %>
      <h1>MANNA</h1>
      <% end %>
    </div>
  </div>
  <div class = "row">
    <%= link_to(home_path) do %>
    <div class = "one-half column navHalf" >
      <p id ="blurb">ACAC Pittsburgh PA</p>
    </div>
    <% end %>
    <div class = "one-half column omega navHalf" >
      <ul class = "nav_menu">
        <li><%= link_to 'Home', home_path %></li>
        <li><%= link_to 'Submit', new_case_path %></li>
        <li><%= link_to 'Cases', cases_path %></li>
        <li class = "last"><%= link_to 'Clients', clients_path %></li>
